#include "fmodex/inc/fmod.hpp"
#include "fmodex/inc/fmod_errors.h"
#include <string>
#include <string.h>
#include <stdio.h>
#include <stdlib.h>
#include <iostream>
#include <math.h>

#ifndef AUDIOMANAGER_H
#define AUDIOMANAGER_H

class AudioManager
{
  
public:
  AudioManager();
  virtual ~AudioManager();
  void errorCheck(FMOD_RESULT result);
  void playStream(std::string songname);
  void playEffect(std::string soundname);
  void setVolumeLevel(float volumeLevel);
  void pauseToggle(bool pause);
  void setFadeEffect(float time);
  void cleanUpstream();
  void audioInit();
  void soundCardEngage();
  void update();
protected:
  bool quit; 
  bool fading; 
  int fadeLength;
  int fadeStartTick;
  
  FMOD::System *system;
  FMOD_RESULT result;
  unsigned int version;
  int numDrivers;
  FMOD_SPEAKERMODE speakerMode;
  FMOD_CAPS caps;
  char name[256];
  FMOD::Channel *channel0,*channel1;
  FMOD::ChannelGroup *channelMusic;
  FMOD::ChannelGroup *channelEffects;
  FMOD::Sound *sound0,*sound1;
  int engaged;
  float volume_level;
  float volume_max;
  
};

#endif // AUDIOMANAGER_H